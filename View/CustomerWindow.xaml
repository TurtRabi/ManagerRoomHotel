<Window x:Class="View.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="CustomerWindow" Height="800" Width="1200"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="Transparent"
        >
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.1*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF0AD3EB" CornerRadius="10,0,0,10" Margin="2,0,0,0">
            <StackPanel >

                <Ellipse Width="156" Height="160" HorizontalAlignment="Center" Margin="0,144,0,0">
                    <Ellipse.Fill>
                        <VisualBrush Stretch="Uniform">
                            <VisualBrush.Visual>
                                <Image Source="/welcome.jpg"/>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Label Width="231" FontFamily="Segoe Print" FontSize="36" Margin="0,30,0,0" Foreground="White" Content="WELCOME!!!" FontWeight="Bold"/>
                <Label x:Name="userName" Width="159" FontFamily="Segoe Print" FontSize="28" Content="" HorizontalContentAlignment="Center" Foreground="#FFF4EFEF" Padding="5,-9,5,5"></Label>
                <Label Height="165" Width="335" Margin="0,43,0,20" Padding="10,7,10,10">
                    <TextBlock Text="Peace does not mean one where no noise, no trouble&#xA;and no toil. When we are in a storm, we still feel the calm of mind.&#xA;That is the real meaning of peace!"
               TextAlignment="Center"
               Foreground="#FFF0E6E6"
               Height="149"
               Width="311"
               FontFamily="Segoe Print"
               FontSize="13"
               TextWrapping="Wrap" Padding="0,11,0,0"/>
                </Label>

                <Button Grid.Column="0" Width="57" Margin="-281,-1315,5,0" FontSize="14" FontFamily="Segoe Print" Click="btnShowPopup_Click" Height="57" Background="{x:Null}" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="50" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/menu.png" Stretch="Uniform" Width="32" Height="48" RenderTransformOrigin="0.5,0.667"/>
                </Button>

                <Popup x:Name="myPopup" Placement="Mouse" StaysOpen="False" Width="150">
                    <Border Background="LightGray" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
                        <StackPanel Margin="5">
                            <TextBlock Text="Menu" Margin="5" HorizontalAlignment="Center" FontWeight="Bold" FontSize="24"/>
                            <Button Content="Home" Width="120" Click="Button_Click_10" Margin="5"/>
                            <Button Content="My Information" Width="120" Click="Button_Click_8" Margin="5"/>
                            <Button Content="Booking history" Width="120" Click="Button_Click_9" Margin="5"/>
                            <Button Content="Logout" Width="120" Background="Red" Click="Button_Click_7" Margin="5"/>
                        </StackPanel>
                    </Border>
                </Popup>

            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#FFFBFBFB" CornerRadius="0,10,10,0">
            <Frame x:Name="frMain" NavigationUIVisibility="Visible" Grid.Column="1" Margin="10,10,10,0" Navigated="frMain_Navigated">
            </Frame>
        </Border>
       


    </Grid>
</Window>
